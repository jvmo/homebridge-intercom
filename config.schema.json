{
  "pluginAlias": "Intercom Door",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Accessory Name",
        "type": "string",
        "required": true,
        "default": "Intercom Door",
        "description": "The name of the accessory."
      },
      "relayPin": {
        "title": "Relay Pin",
        "type": "integer",
        "required": true,
        "default": 4,
        "description": "The GPIO pin for the relay.",
        "minimum": 0,
        "maximum": 40
      },
      "voltagePin": {
        "title": "Voltage Pin",
        "type": "integer",
        "required": true,
        "default": 17,
        "description": "The GPIO pin for the voltage measurement.",
        "minimum": 0,
        "maximum": 40
      },
      "apiURL": {
        "title": "API URL",
        "type": "string",
        "required": true,
        "default": "http://localhost:8080",
        "description": "The URL of the REST API server.",
        "format": "uri"
      }
    }
  }
}
