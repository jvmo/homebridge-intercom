{
  "name": "homebridge-intercom-door",
  "version": "0.0.25",
  "description": "Homebridge plugin to control electromagnetic lock via Raspberry Pi GPIO pins",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "raspberry-pi",
    "gpio",
    "lock-mechanism",
    "homekit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jvmo/homebridge-intercom-door"
  },
  "homepage": "https://github.com/jvmo/homebridge-intercom-door#readme",
  "bugs": {
    "url": "https://github.com/jvmo/homebridge-intercom-door/issues"
  },
  "engines": {
    "homebridge": ">=1.3.0",
    "node": ">=14.0.0"
  },
  "author": "jvmo",
  "maintainers": [
    {
      "name": "jvmo",
      "email": "jvmodeveloper@gmail.com"
    }
  ],
  "dependencies": {
    "homebridge": "latest",
    "node-persist": "^2.1.0",
    "rpio": "^2.2.0",
    "underscore": "^1.8.3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js"
  },
  "peerDependencies": {
    "homebridge": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "homebridge": {
    "platforms": [
      {
        "platform": "ElectromagneticLock"
      }
    ],
    "accessories": [
      {
        "accessory": "ElectromagneticLock",
        "name": "YourLockName",
        "lockPin": 17,
        "doorPin": 18,
        "voltagePin": 22,
        "activeLow": true,
        "reedSwitchActiveLow": true,
        "unlockingDuration": 2,
        "lockWithMemory": true
      }
    ]
  }
}
